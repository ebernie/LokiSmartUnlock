<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="loki">
        <item name="android:textAppearance">@style/TextAppearanceFinish</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--<item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>-->
    </style>

    <style name="TextAppearanceFinish" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="WizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/abc_action_bar_default_height_material</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff0099cc</item>
        <item name="android:fontFamily">fonts/Roboto-Condensed.ttf</item>
    </style>

    <style name="WizardFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="android:textColor">@color/text_light</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <!-- Home screen -->

    <style name="ImageUnlockItem">
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/loki_button</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="LokiText" parent="android:TextAppearance.Holo.Medium">
        <item name="android:fontFamily">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
    </style>

    <style name="TextAppearanceUnlockItem" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxRows">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="unlock_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">fonts/Roboto-Medium.ttf</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
    </style>

</resources>
