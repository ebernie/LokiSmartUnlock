<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:paddingLeft="@dimen/list_item_padding"
        android:id="@+id/img_unlockSymbol"
        android:src="@drawable/ic_launcher"
        style="@style/ImageUnlockItem"
        android:layout_centerVertical="true"
        />

    <TextView
        android:text="WiFi 1"
        android:id="@+id/txt_unlockName"
        style="@style/TextAppearanceUnlockItem"
        android:layout_alignBaseline="@id/img_unlockSymbol"
        android:layout_toRightOf="@id/img_unlockSymbol"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_delete"
        />

    <ImageButton
        android:id="@+id/btn_delete"
        android:src="@drawable/ic_action_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        style="@style/ImageUnlockItem" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_delete"
        android:layout_marginTop="12dp"
        android:background="@drawable/unlock_item_underline"
        />

</RelativeLayout>