<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bernieeng.loki.ui.activity.HomeActivity.UnlockListFragment"
    android:paddingTop="@dimen/abc_action_bar_default_height_material"
    >

    <view
        class="com.bernieeng.loki.ui.BackgroundContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/listViewBackground">
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"

            />

        <TextView
            android:id="@android:id/empty"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="No unlocks configured. Run the setup wizard?"
            android:fontFamily="fonts/Roboto-LightItalic.ttf"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textSize="22sp"
            android:textColor="@android:color/darker_gray"
        />
    </view>
</RelativeLayout>
